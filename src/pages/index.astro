---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
    <div
        class='absolute inset-0 flex flex-col items-center justify-center text-center font-sans font-medium'
    >
        <h1 class='text-5xl font-bold not-italic'>gae's Blog</h1>
        <p class='my-2 text-lg italic'>posting my technical things</p>
        <div class='mx-auto mb-4 mt-8 flex w-fit'>
            <a
                href='https://twitter.com/gae_dev'
                target='_blank'
                rel='noopener me'
                title='Twitter'
                class='ml-2 hover:scale-110 hover:opacity-70'
                ><svg
                    xmlns='http://www.w3.org/2000/svg'
                    width='42'
                    height='42'
                    viewBox='0 0 24 24'
                    fill='none'
                    stroke='currentColor'
                    stroke-width='2'
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    ><path
                        d='M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z'
                    ></path></svg
                ></a
            ><a
                href='https://gitlab.mma.club.uec.ac.jp/gae'
                target='_blank'
                rel='noopener me'
                title='Gitlab'
                class='ml-2 hover:scale-110 hover:opacity-70'
                ><svg
                    xmlns='http://www.w3.org/2000/svg'
                    width='42'
                    height='42'
                    viewBox='0 0 24 24'
                    fill='none'
                    stroke='currentColor'
                    stroke-width='2'
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    ><path
                        d='M22.65 14.39L12 22.13 1.35 14.39a.84.84 0 0 1-.3-.94l1.22-3.78 2.44-7.51A.42.42 0 0 1 4.82 2a.43.43 0 0 1 .58 0 .42.42 0 0 1 .11.18l2.44 7.49h8.1l2.44-7.51A.42.42 0 0 1 18.6 2a.43.43 0 0 1 .58 0 .42.42 0 0 1 .11.18l2.44 7.51L23 13.45a.84.84 0 0 1-.35.94z'
                    ></path></svg
                ></a
            >
        </div>
        <ul>
            <li
                class='m-auto w-fit py-1 text-2xl hover:scale-110 hover:opacity-80'
            >
                <a href='/posts'>Posts</a>
            </li>
            <li
                class='m-auto w-fit py-1 text-2xl hover:scale-110 hover:opacity-80'
            >
                <a href='/about'>About</a>
            </li>
            <li
                class='m-auto w-fit py-1 text-2xl hover:scale-110 hover:opacity-80'
            >
                <a href='/links'>Links</a>
            </li>
        </ul>
    </div>
</BaseLayout>
